{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",          // keep commonjs for Node.js
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,       // ðŸ‘ˆ important
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
